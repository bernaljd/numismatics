// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Modelo de Moneda
model Coin {
  id            String   @id @default(cuid())
  pais          String
  anio          Int
  denominacion  String
  estado        String
  descripcion   String?
  imagen        String   // Imagen obligatoria
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  userId        String
  
  @@index([userId])
}

// Modelo de Billete
model Banknote {
  id            String   @id @default(cuid())
  pais          String
  anio          Int
  denominacion  String
  estado        String?
  descripcion   String?
  imagen        String   // Imagen obligatoria
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  userId        String
  
  @@index([userId])
}
